programa ordenacion; /* el programa ejecutable tendra el mismo nombre que
						la palabra que le precede al programa */


// var entero x[10]; declaracion antigua

var x : arreglo de entero[10]; // x tentra como máximo 10 enteros
var u, v, w: entero;

funcion minloc (a:arreglo de entero[10]; peq, gra:entero) : entero
{
	var i, x, k: entero;
	
	k = peq;
	x = a[peq];
	
	i = peq + 1;
	
	mientras ( i < gra )
	{
		si ( a[i] < x )
		{
			x = a[i];
			k = i;
		}
		
		i = i + 1;
		
		si ( x < 5 )
			retornar 0;
	}
	
	retornar k;
}

/* 	ordenar los elementos de un arreglo
	usando el algoritmo de burbuja 
	*/
procedimiento ordenar( entero a[], entero peq, entero gra)
{
	
	var i, k: entero;
	
	i = peq;
	
	mientras ( i < gra - 1)
	{
		entero t;
		k = llamar minloc(a, i, gra);
		/* intercambiar los valores de menor a mayor */
		t = a[k];
		a[k] = a[i];
		a[i] = t;
		
		i = i +1;
	}
}

procedimiento principal( void )
{
	var i: entero;
	i = 0;
	
	mientras ( i < 10 )
	{
		llamar escribir("Ingrese numero ", i + 1 " para arreglo ");
		x[i] = llamar entrar();
		i = i + 1;
		
	}
	
	llamar ordenar(x, 0, 10);
	
	i = 0;
	
	llamar escribir("Los valores en orden son: ");
	mientras ( i < 10 )
	{
		llamar escribir(" val ", i, " = ");
		llamar salida(x[i]);
		llamar escribir(SALTODELINEA); /* salto de linea esta definido en una libreria de salidas */
	}
	
	/* espera pulsacion de tecla pero no deja nada en el buffer */
	llamar esperar(); /* llama a funcion esperar, esta espera que se pulse una tecla */
}